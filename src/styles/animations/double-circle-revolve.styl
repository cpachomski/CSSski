brown = #655643
red = #BF4D28
teal = #80BCA3
sand = #F6F7BD
yorange = #E6AC27


.double-circle-revolve
	position: relative

	&:before, &:after
		content: ''
		position: absolute
		height: 25px
		width: 25px
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		border-radius: 25px

	&:before
		background: brown
		animation: before-circle-revolve 2s ease infinite
	&:after
		background: red
		animation: after-circle-revolve 2s ease infinite


@keyframes before-circle-revolve {
	0% { transform: translateX(0%)  }
	30% {  transform:  rotate(0deg) translateX(-150%) rotate(0deg)}
	60% { transform: rotate(180deg) translateX(-150%) rotate(180deg)}
	100% { transform: translateX(0%)}

}

@keyframes after-circle-revolve {
	0% { transform: translateX(0%)  }
	30% {  transform:  rotate(0deg) translateX(150%) rotate(0deg)}
	60% { transform: rotate(180deg) translateX(150%) rotate(180deg)}
	100% { transform: translateX(0%)}
}


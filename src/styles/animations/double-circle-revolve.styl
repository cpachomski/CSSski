blue = #001F36
seablue = #1C5560
teal = #79AE92
sand = #FBFFCD




.double-circle-revolve
	position: relative

	&:before, &:after
		content: ''
		position: absolute
		height: 25px
		width: 25px
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		border-radius: 25px

	&:before
		background: black
		animation: before-circle 2s ease-in-out infinite
	&:after
		background: sand
		animation: after-circle 2s ease-in-out infinite


@keyframes before-circle {
	0% { transform: translateX(0%)  }
	40% {  transform:  rotate(0deg) translateX(-200%) rotate(0deg)}
	55% { transform: rotate(180deg) translateX(-200%) rotate(180deg)}
	100% { transform: translateX(0%)}

}

@keyframes after-circle {
	0% { transform: translateX(0%)  }
	40% {  transform:  rotate(0deg) translateX(200%) rotate(0deg)}
	55% { transform: rotate(180deg) translateX(200%) rotate(180deg)}
	100% { transform: translateX(0%)}
}


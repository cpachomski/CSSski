brown = #655643
red = #BF4D28
teal = #80BCA3
sand = #F6F7BD
yorange = #E6AC27


.splitting-lines
	position: relative

	&:before, &:after
		content: ''
		position: absolute
		height: 5px
		width: 50px
		top: 50%
		left: 50%
		transform: translate(-50%, -50%)
		border-radius: 25px

	&:before
		background: brown
		animation: before-splitting-line 2.5s ease-in-out infinite

	&:after
		background: red
		animation: after-splitting-line 2.5s ease-in-out infinite





@keyframes before-splitting-line {
	0% { transform: translate(0%, 200%)  }
	25% { transform: translate(100%, 100%) }
	50% { transform: translate(0%, 200%)  }
	75% { transform: translate(-100%, 100%) }
	100% { transform: translate(0%, 200%)  }
}

@keyframes after-splitting-line {
	0% { transform: translate(0%, -200%)  }
	25% { transform: translate(-100%, -100%) }
	50% { transform: translate(0%, -200%)  }
	75% { transform: translate(100%, -100%) }
	100% { transform: translate(0%, -200%)  }

}






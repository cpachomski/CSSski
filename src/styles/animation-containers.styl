brown = #655643
red = #BF4D28
teal = #80BCA3
sand = #F6F7BD
yorange = #E6AC27


.content
	margin-top: 300px

section
	height: 400px
	position: relative

	&:first-child
		border-top: 10px solid brown
	h3
		padding: 25px
		font-weight: 100
		text-transform: uppercase

	&:nth-child(odd)
		background-color: sand
	
		h3
			color: brown

	&:nth-child(even)
		background-color: teal
		
		h3
			color: red


.animation-container
	position: absolute
	top: 50%
	left: 50%
	transform: translate(-50%, -50%)


	span
		width: 10px
		height: 10px
		padding: 5px 15px





